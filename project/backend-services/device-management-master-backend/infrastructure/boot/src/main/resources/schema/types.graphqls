type DeviceInformation {
    device : Device
    records : [RecordEntry]
    staticData: [StaticDataEntry]
    subDevices : [SubDevice]
    commands : [DeviceCommand]
}

type StaticDataEntry {
    label : StaticDataType
    content : String
}

type RecordEntry {
    label : String
    content : String
}

type Device {
    id : String
    name : String
    downlink : String
}

type DeviceCommand {
    id : String
    name : String
    ref : Int
    port : Int
    payload : String
}

type SubDevice {
    id : String
    ref : Int
}

type DeviceId {
    id : String
}

enum StaticDataType {
    GPS_LATITUDE,
    GPS_LONGITUDE
}

input DeviceInput {
    id : String
    name : String
    downlink : String
}

input DeviceInformationInput {
    device : DeviceInput
    records : [RecordEntryInput]
    staticData: [StaticDataEntryInput]
    subDevices : [SubDeviceInput]
    commands: [DeviceCommandInput]
}

input RecordEntryInput {
    label : String
    content : String
}

input StaticDataEntryInput {
    label : StaticDataType
    content : String
}

input SubDeviceInput {
    id : String
    ref : Int
}

input DeviceCommandInput {
    id : String
    name : String
    ref : Int
    port : Int
    payload : String
}
