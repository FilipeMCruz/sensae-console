type Query {
    authenticate(provider: String): AccessToken
    refresh: AccessToken
    profile: Tenant
    viewDomain(domain: ViewDomain): [Domain]
    viewDomainInfo(domain: ViewDomain): DomainInfo
    viewChildDomainsInfo(domain: ViewDomain): [DomainInfo]
    viewDevicesInDomain(domain: ViewDomain): [Device]
    viewTenantsInDomain(domain: ViewDomain): [Tenant]
}

type Mutation {
    createDomain(domain: CreateDomain): Domain
    changeDomain(domain: ChangeDomain): Domain
    addTenant(instructions: AddTenantToDomain): Tenant
    updateTenant(instructions: TenantUpdateCommandInput): Tenant
    removeTenant(instructions: RemoveTenantFromDomain): Tenant
    addDevice(instructions: AddDeviceToDomain): Device
    removeDevice(instructions: RemoveDeviceFromDomain): Device
}
